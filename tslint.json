{
  "defaultSeverity": "error",
  "plugins": ["prettier"],
  "extends": ["tslint:recommended"],
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "prettier": [
      true,
      {
        "spaceWidth": 2,
        "singleQuote": true
      }
    ]
  },
  "rulesDirectory": ["tslint-plugin-prettier"]
}
