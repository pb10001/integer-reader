{
  "name": "integer-reader",
  "version": "0.0.2",
  "description": "Integer Reader is a JS library written in TypeScript which converts an integer into words.",
  "main": "./dist/index.js",
  "repository": "https://github.com/pb10001/integer-reader.git",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "tslint --fix 'src/**/*.ts'",
    "test": "npm run build && mocha --exit --require ts-node/register test/**/*.ts",
    "unit": "npm test",
    "testreport": "npm run build && nyc --reporter=html mocha --exit --require ts-node/register test/**/*.ts"
  },
  "author": "pb10001",
  "license": "MIT",
  "keywords": [
    "integer"
  ],
  "files": [
    "README.md",
    "index.js",
    "dist",
    "LICENSE",
    "package.json"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/node": "^10.12.10"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/IReadable.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ],
    "sourceMap": true,
    "all": true
  }
}
